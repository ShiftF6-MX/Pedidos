<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formulario"
    android:orientation="vertical"
    android:layout_margin="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Cliente"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Producto"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spProducto" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Cantidad"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edtCantidad"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:numeric="decimal" />

        <Spinner
            android:id="@+id/spUnidad"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtFecha"
        android:inputType="date"
        android:focusable="false"
        android:clickable="true"
        android:maxLines="1"
        android:hint="Fecha"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notas"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/edtNotas"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAgregarPrdocuto"
        android:text="Agregar producto"/>

    <ListView
        android:id="@+id/listNPedido"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Pedido"
        android:id="@+id/btnGuardarPedido"/>

</LinearLayout>